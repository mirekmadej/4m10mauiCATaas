<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_4m10mauiCATaas.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="inspiracja z: https://cataas.com/  THANKS :)" />
            <Entry
                Placeholder="co kot ma powiedzieć?"
                x:Name="entTekst"
                />
            <HorizontalStackLayout>
                <Label Text="Kolor napisu: " />
                <RadioButton Content="Red" x:Name="rbtRed" />
                <RadioButton Content="Blue" x:Name="rbtBlue" />
                <RadioButton Content="Green" x:Name="rbtGreen" />
            </HorizontalStackLayout>
            <Button
                x:Name="CounterBtn"
                Text="chcę kota!" 

                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            
            <Image
                Source="dotnet_bot.png"
                x:Name="imgCat"
                HeightRequest="600"
                Aspect="AspectFit"
                 />

            


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
